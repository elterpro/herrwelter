{% extends 'baseBackend.html.twig' %}

{% block breadcrumb %}
    <li><a href="{{ path('provider') }}">{{ 'word.dashboard'|trans }}</a></li>
    <li class="active">{% trans %}word.translation{% endtrans %}</li>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-12 col-md-6">
            <div class="panel panel-default text-center">
                <div class="panel-body">
                    <h3>{{ 'type.translation.add.heading'|trans }}</h3>
                    {{ form(form_addTranslation) }}
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-6">
            <div class="panel panel-default text-center">
                <div class="panel-body">
                    <h3>{{ 'type.message.add.heading'|trans }}</h3>
                    {{ form(form_addMessage) }}
                </div>
            </div>
            <div class="panel panel-default text-center">
                <div class="panel-body">
                    <h3>{{ 'type.language.add.heading'|trans }}</h3>
                    {{ form(form_addLanguage) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}