{% extends 'baseBackend.html.twig' %}

{% block content_header %}
    <h2>{% trans %}word.categories{% endtrans %}</h2>
    <p>{% trans %}employee.service.category.description{% endtrans %}Darstellen und verwalten von Kategorien der Dienstleistungen.</p>
{% endblock %}

{% block breadcrumb %}
    <li><a href="{{ path('provider') }}">Dashboard</a></li>
    <li class="active">Kategorien</li>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xs-12 col-md-6">
            <div class="panel panel-default text-center">
                <div class="panel-body">
                    <h3>Kategorien</h3>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-condensed">
                            <thead>
                            <tr>
                                <td>ID</td>
                                <td>Branche</td>
                                <td>Name</td>
                                <td>&nbsp;</td>
                            </tr>
                            </thead>
                            <tbody>
                            {% for category in categories %}
                                <tr>
                                    <td>{{ category.id }}</td>
                                    <td>{{ category.branch }}</td>
                                    <td>{{ category.serviceName }}</td>
                                    <td><a><i class="fa fa-remove"></i></a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-6">

        </div>
    </div>

{% endblock %}